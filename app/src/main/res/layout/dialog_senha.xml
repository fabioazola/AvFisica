<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/textView_senha_atual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/botao_customizado_transp"
        android:gravity="center"
        android:hint="Senha Atual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView_senha_futura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@drawable/botao_customizado_transp"
        android:gravity="center"
        android:hint="Nova senha"
        app:layout_constraintEnd_toEndOf="@+id/textView_senha_atual"
        app:layout_constraintStart_toStartOf="@+id/textView_senha_atual"
        app:layout_constraintTop_toBottomOf="@+id/textView_senha_atual" />
</androidx.constraintlayout.widget.ConstraintLayout>