<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="6dp"
    android:background="@android:color/holo_blue_dark"
    android:elevation="6dp"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView_card"
            android:layout_width="85dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_card_data"
            app:srcCompat="@drawable/corrida" />

        <TextView
            android:id="@+id/textView_card_dist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/textView_card_pace"
            app:layout_constraintStart_toEndOf="@+id/imageView_card"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_card_pace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_card_dist"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_card_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="6dp"
            android:text="Dist. (Km)"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_card_dist"
            app:layout_constraintStart_toStartOf="@+id/textView_card_dist"
            app:layout_constraintTop_toBottomOf="@+id/textView_card_dist" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="6dp"
            android:text="Ritmo (Min/Km)"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_card_pace"
            app:layout_constraintStart_toStartOf="@+id/textView_card_pace"
            app:layout_constraintTop_toBottomOf="@+id/textView_card_pace" />

        <TextView
            android:id="@+id/textView_card_tempo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/textView_card_kcal"
            app:layout_constraintStart_toEndOf="@+id/imageView_card"
            app:layout_constraintTop_toBottomOf="@+id/textView42" />

        <TextView
            android:id="@+id/textView_card_kcal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_card_tempo"
            app:layout_constraintTop_toBottomOf="@+id/textView67" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Tempo"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_card_tempo"
            app:layout_constraintStart_toStartOf="@+id/textView_card_tempo"
            app:layout_constraintTop_toBottomOf="@+id/textView_card_tempo" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Kcal"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/textView_card_kcal"
            app:layout_constraintStart_toStartOf="@+id/textView_card_kcal"
            app:layout_constraintTop_toBottomOf="@+id/textView_card_kcal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>